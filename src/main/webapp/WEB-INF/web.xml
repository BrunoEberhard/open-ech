<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>OpenEch</display-name>
	<servlet>
		<servlet-name>OpenEch</servlet-name>
		<servlet-class>org.minimalj.frontend.impl.servlet.MjServlet</servlet-class>
		<init-param>
			<description>Minimal-J application class to start</description>
			<param-name>Application</param-name>
			<param-value>ch.openech.OpenEchApplication</param-value>
		</init-param>
		<init-param>
			<param-name>MjBackendDatabase</param-name>
			<param-value>openech</param-value>
		</init-param>
		<init-param>
			<param-name>MjDevMode</param-name>
			<param-value>true</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>OpenEch</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
</web-app>